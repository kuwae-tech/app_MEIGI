{
  "name": "meigi-spot-kanri",
  "version": "0.1.0",
  "description": "名義SPOT管理 (Electron)",
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "build": "node scripts/sync-xlsx.mjs && npm run build:vendor",
    "build:vendor": "node scripts/build-vendor.mjs",
    "dist": "electron-builder --publish never",
    "dist:dir": "electron-builder --dir --publish never"
  },
  "dependencies": {
    "googleapis": "^140.0.0",
    "xlsx": "^0.18.5",
    "xlsx-js-style": "^1.2.0",
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^32.1.2",
    "electron-builder": "^25.1.8",
    "esbuild": "^0.25.0"
  },
  "build": {
    "appId": "jp.kuwae-tech.meigi-spot-kanri",
    "productName": "名義SPOT管理",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**",
      "!.github/**"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "assets/icon.ico"
    }
  }
}
